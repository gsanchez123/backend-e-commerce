<h2 class="text-center mt-4">Carrito de Compras</h2>
<div id="cart-container">
    {{#if cart.products.length}}
        <ul class="list-group">
            {{#each cart.products}}
            <li class="list-group-item d-flex justify-content-between align-items-center">
                {{this.productId.name}} - ${{this.productId.price}} x {{this.quantity}}
                <button class="btn btn-danger btn-sm remove-from-cart" data-id="{{this.productId._id}}">Eliminar</button>
            </li>
            {{/each}}
        </ul>
        <button class="btn btn-warning mt-3" id="checkout">Finalizar Compra</button>
    {{else}}
        <p class="text-center">Tu carrito está vacío.</p>
    {{/if}}
</div>
