{{!-- Mostrar productos --}}
<div>
    {{#each products}}
    <div class="product">
        <img src="{{this.thumbnail}}" alt="{{this.name}}">
        <h2>{{this.name}}</h2>
        <p>{{this.description}}</p>
        <p>${{this.price}}</p>
        <button>Add to Cart</button>
    </div>
    {{/each}}
</div>

<!-- PaginaciÃ³n -->
<div>
    {{#if prevPage}}
    <a href="{{prevLink}}">Previous</a>
    {{/if}}
    {{#if nextPage}}
    <a href="{{nextLink}}">Next</a>
    {{/if}}
</div>