<div class="chat-container">
    <h2 class="chat-title">ðŸ“¢ Chat en tiempo real</h2>
    
    <div class="chat-box">
        <ul id="messages" class="chat-messages"></ul>
    </div>

    <form id="chatForm" class="chat-form">
        <input type="text" id="message" class="chat-input" placeholder="Escribe tu mensaje aquÃ­..." required />
        <button type="submit" class="chat-btn">Enviar</button>
    </form>
</div>

<script src="/socket.io/socket.io.js"></script>
<script>
    const socket = io();

    const form = document.getElementById('chatForm');
    const messages = document.getElementById('messages');

    // ðŸ“¢ Escuchar nuevos mensajes del servidor y mostrarlos en el chat
    socket.on('newMessage', (message) => {
        const li = document.createElement('li');
        li.classList.add('message-item');
        li.innerHTML = `<span class="message-text">${message}</span>`;
        messages.appendChild(li);

        // Hacer scroll automÃ¡tico hacia el Ãºltimo mensaje
        messages.scrollTop = messages.scrollHeight;
    });

    // ðŸ“© Enviar mensaje al servidor
    form.onsubmit = (e) => {
        e.preventDefault();
        const input = document.getElementById('message');
        const message = input.value.trim();

        if (message) {
            socket.emit('sendMessage', message);
            input.value = ''; // Limpiar input despuÃ©s de enviar
        }
    };
</script>

